{% extends "./layout.njk" %}


{% block content %}

<div class="card">

    <section class="avatar" style="background: url({{ product.avatar_url }}) no-repeat center center / cover"></section>

    <section class="details">

        <form method="POST" action="/products?_method=PUT">

            <h3>Editar/Alterar</h3>

            {% include 'products/fields.njk' %}

            <input type="hidden" name="id" value={{product.id}}>
        
        </form>

        <form id="form-delete" action="/products?_method=DELETE" method="POST">
            <input type="hidden" name="id" value={{product.id}}>
            <button type="submit">Deletar Produto</button>
        </form>

    </section>

</div>

{% endblock content %}